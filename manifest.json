{
  "manifest_version": 3,
  "name": "Auto Connect",
  "version": "1.1",
  "description": "Auto login to college WiFi only when needed.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["https://172.22.2.6/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
